{
    "$schema": "https://schema.tauri.app/config/2.0",
    "productName": "PopPins II",
    "version": "0.1.0",
    "identifier": "com.poppins.standalone",
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "../../app",
            "../../vector_db",
            "../../.env",
            "../../requirements.txt"
        ]
    },
    "app": {
        "windows": [
            {
                "title": "PopPins II - AI 학습 자료 생성기",
                "width": 1400,
                "height": 900,
                "resizable": true,
                "fullscreen": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    }
}